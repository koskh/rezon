:root {
  --bluejeans-dark: #72a2d4;
  --page-bg: white;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.spinner {
  width: 1rem;
  background-color: var(--bluejeans-dark);
  margin: 0 auto;
  border-width: 0.5rem;
  border-style: solid;
  border-radius: 50%;
  border-color: transparent;
  border-top-color: var(--page-bg);

  animation: spin 1s infinite linear;
}
